{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": false,
        "noImplicitAny": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true, 
        "esModuleInterop": true,
        "target": "es2017",
        "lib": ["es2017", "dom"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}